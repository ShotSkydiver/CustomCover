<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:fitsSystemWindows="true"
    android:id="@+id/container"

    tools:context="me.connerowen.customcover.MainActivity">

    <!-- <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:theme="@style/AppTheme.AppBarOverlay">
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CustomCover"
            android:padding="5dp"
            android:textSize="26dp"/>
    </android.support.design.widget.AppBarLayout> -->


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:popupTheme="@style/AppTheme.PopupOverlay" />



    <RelativeLayout
        android:id="@+id/artlayout"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/card"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/coverArt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/art"
            android:background="@color/colorPrimary" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_marginTop="403dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:background="@drawable/card"
        android:orientation="vertical"
        android:id="@+id/swatches"
         >

        <TextView
            android:id="@+id/vibrant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Vibrant swatch"
            android:textColor="@color/textColor"
            android:background="@color/colorAccent" />
        <TextView
            android:id="@+id/vibrantDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="3dp"
            android:text="Vibrant dark swatch"
            android:textColor="@color/textColor"
            android:background="@color/colorAccent" />
        <TextView
            android:id="@+id/vibrantLight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="3dp"
            android:text="Vibrant light swatch"
            android:textColor="@color/textColor"
            android:background="@color/colorAccent" />

        <TextView
            android:id="@+id/muted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="3dp"
            android:text="Muted swatch"
            android:textColor="@color/textColor"
            android:background="@color/colorAccent" />
        <TextView
            android:id="@+id/mutedDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="3dp"
            android:text="Muted dark swatch"
            android:textColor="@color/textColor"
            android:background="@color/colorAccent" />
        <TextView
            android:id="@+id/mutedLight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="3dp"
            android:text="Muted light swatch"
            android:textColor="@color/textColor"
            android:background="@color/colorAccent" />

    </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/llFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="780dp"
        android:background="@drawable/card"
        android:orientation="vertical" >
    </LinearLayout>

</RelativeLayout>
